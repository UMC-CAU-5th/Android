<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/home_pannel_background_iv"
            android:layout_width="match_parent"
            android:layout_height="430dp"
            android:src="@drawable/img_first_album_default"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/home_pannel_btn_nugu_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/btn_main_mike"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toStartOf="@id/home_pannel_btn_ticket_iv"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/home_pannel_btn_ticket_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/btn_main_ticket"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toStartOf="@id/home_pannel_btn_setiing_iv"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/home_pannel_btn_setiing_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/btn_main_setting"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/home_pannel_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="매혹적인 음색의 여성 보컬\n팝"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_btn_nugu_iv"/>

        <ImageView
            android:id="@+id/hoem_pannel_btn_play_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/btn_panel_play_large"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_btn_nugu_iv"/>

        <TextView
            android:id="@+id/home_pannel_album_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="총 36곡 2020.06.05"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toTopOf="@id/home_pannel_album_img2_iv"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/home_pannel_album_img_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/img_album_exp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/home_pannel_background_iv"/>

        <TextView
            android:id="@+id/home_pannel_album_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In My Bed"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toTopOf="@id/home_pannel_album_img_iv"
            app:layout_constraintStart_toEndOf="@id/home_pannel_album_img_iv"
            app:layout_constraintBottom_toTopOf="@id/home_pannel_album_singer_tv"/>

        <TextView
            android:id="@+id/home_pannel_album_singer_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bear"
            android:textColor="@color/white"
            android:layout_marginStart="15dp"
            app:layout_constraintBottom_toBottomOf="@id/home_pannel_album_img_iv"
            app:layout_constraintStart_toEndOf="@id/home_pannel_album_img_iv"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_album_title_tv"/>


        <ImageView
            android:id="@+id/home_pannel_album_img2_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/img_album_exp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/home_pannel_album_img_iv"/>

        <TextView
            android:id="@+id/home_pannel_album_title2_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In My Bed"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toTopOf="@id/home_pannel_album_img2_iv"
            app:layout_constraintStart_toEndOf="@id/home_pannel_album_img2_iv"
            app:layout_constraintBottom_toTopOf="@id/home_pannel_album_singer2_tv"/>

        <TextView
            android:id="@+id/home_pannel_album_singer2_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bear"
            android:textColor="@color/white"
            android:layout_marginStart="15dp"
            app:layout_constraintBottom_toBottomOf="@id/home_pannel_album_img2_iv"
            app:layout_constraintStart_toEndOf="@id/home_pannel_album_img2_iv"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_album_title2_tv"/>


        <!-- 하단부 -->

        <TextView
            android:id="@+id/home_pannel_today_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘 발매 음악"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_background_iv"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/home_pannel_today_moreinfo_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/btn_main_arrow_more"
            android:layout_marginTop="18dp"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@id/home_pannel_today_tv"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_background_iv" />

        <ImageView
            android:id="@+id/home_pannel_today_album1_iv"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/img_album_exp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_today_tv"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/home_pannel_today_album1_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Butter"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_today_album1_iv"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/home_pannel_today_album1_singer_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BTS (방탄소년단)"
            android:textColor="@color/gray"
            android:textSize="15sp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_today_album1_title_tv"
            app:layout_constraintStart_toStartOf="parent"/>


        <ImageView
            android:id="@+id/home_pannel_today_album2_iv"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/img_album_exp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_today_tv"
            app:layout_constraintStart_toEndOf="@id/home_pannel_today_album1_iv"/>

        <TextView
            android:id="@+id/home_pannel_today_album2_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제목"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_today_album2_iv"
            app:layout_constraintStart_toEndOf="@id/home_pannel_today_album1_iv"/>

        <TextView
            android:id="@+id/home_pannel_today_album2_singer_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가수"
            android:textColor="@color/gray"
            android:textSize="15sp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_today_album2_title_tv"
            app:layout_constraintStart_toEndOf="@id/home_pannel_today_album1_iv"/>


        <ImageView
            android:id="@+id/home_pannel_today_album3_iv"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/img_album_exp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_today_tv"
            app:layout_constraintStart_toEndOf="@id/home_pannel_today_album2_iv"/>

        <TextView
            android:id="@+id/home_pannel_today_album3_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제목"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_today_album3_iv"
            app:layout_constraintStart_toEndOf="@id/home_pannel_today_album2_iv"/>

        <TextView
            android:id="@+id/home_pannel_today_album3_singer_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가수"
            android:textColor="@color/gray"
            android:textSize="15sp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_today_album3_title_tv"
            app:layout_constraintStart_toEndOf="@id/home_pannel_today_album2_iv"/>

        <TextView
            android:id="@+id/home_pannel_today_total_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="종합"
            android:textSize="17sp"
            android:textColor="@color/blue"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toStartOf="@id/home_pannel_today_korea_tv"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_background_iv"/>

        <TextView
            android:id="@+id/home_pannel_today_korea_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="국내"
            android:textSize="17sp"
            android:textColor="@color/gray"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toStartOf="@id/home_pannel_today_world_tv"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_background_iv"/>

        <TextView
            android:id="@+id/home_pannel_today_world_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="해외"
            android:textSize="17sp"
            android:textColor="@color/gray"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_background_iv"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>